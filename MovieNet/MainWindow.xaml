<Window x:Class="MovieNet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieNet"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource VMLocator}, Path=MainVM}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Command="{Binding MyCommand}" Content="Ajouter un utilisateur" HorizontalAlignment="Left" Margin="35,257,0,0" VerticalAlignment="Top" Width="143" Click="Button_Click"/>

        <TextBox Text="{Binding Firstname}" HorizontalAlignment="Left" Height="23" Margin="35,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
        <TextBox Text="{Binding Lastname}" HorizontalAlignment="Left" Height="23" Margin="35,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143" TextChanged="TextBox_TextChanged"/>
        <TextBox Text="{Binding Login}" HorizontalAlignment="Left" Height="23" Margin="35,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
        <TextBox Text="{Binding Password}" HorizontalAlignment="Left" Height="23" Margin="35,229,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
    </Grid>
</Window>
